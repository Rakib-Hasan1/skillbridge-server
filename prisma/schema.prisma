generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STUDENT
  TUTOR
  ADMIN
}

model TutorProfile {
  id         String   @id @default(uuid())
  userId     String   @unique
  bio        String
  hourlyRate Int
  subjects   String[]
  rating     Float    @default(0)

  createdAt DateTime @default(now())

  user     String //better auth
  bookings Booking[]
  reviews  Review[]
}

model Booking {
  id        String   @id @default(uuid())
  userId    String
  tutorId   String
  date      DateTime
  startTime String
  endTime   String
  status    String   @default("CONFIRMED")

  createdAt DateTime @default(now())

  user  String //better auth
  tutor TutorProfile @relation(fields: [tutorId], references: [id])
}

model Review {
  id      String @id @default(uuid())
  rating  Int
  comment String

  userId  String
  tutorId String

  createdAt DateTime @default(now())

  user  String //better auth
  tutor TutorProfile @relation(fields: [tutorId], references: [id])
}

model Category {
  id   String @id @default(uuid())
  name String @unique
}
